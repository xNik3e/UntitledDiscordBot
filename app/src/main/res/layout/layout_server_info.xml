<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:elevation="@dimen/padding_8"
    app:cardBackgroundColor="@color/surface_dark_grey"
    app:cardCornerRadius="@dimen/dp_16"
    app:strokeWidth="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_24"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_16">


        <TextView
            style="@style/myFontStyle.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_16"
            android:text="@string/informations"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold" />


        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/server_level"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:min="0"
            android:paddingBottom="@dimen/dp_8"
            android:progress="0"
            app:indicatorColor="@color/active_color"
            app:trackColor="@color/white_stroke_transparent_25"
            app:trackCornerRadius="@dimen/dp_12"
            app:trackThickness="16dp" />

        <TextView
            android:id="@+id/server_level_text"
            style="@style/myFontStyle.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_16"
            android:textSize="@dimen/text_very_small"
            android:textStyle="bold"
            tools:text="Level 1 Server" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/prefix_label"
                style="@style/myFontStyle.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/server_prefix"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentEnd="true"
                android:background="@drawable/add_button"
                android:backgroundTint="@color/white_stroke_transparent_25"
                android:gravity="center"
                android:minWidth="@dimen/dp_48"
                android:orientation="vertical">

                <com.example.untitleddiscordbot.Utils.AlwaysMarqueeTextView
                    android:id="@+id/prefix_value"
                    style="@style/myFontStyle.Regular"
                    android:layout_width="wrap_content"
                    android:scrollHorizontally="true"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxEms="5"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingEnd="@dimen/dp_4"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    tools:text="-jjjjjjjjjjjjjjjddddddddddjjjj" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4">

            <TextView
                android:id="@+id/members_label"
                style="@style/myFontStyle.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Members count:"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentEnd="true"
                android:background="@drawable/add_button"
                android:backgroundTint="@color/white_stroke_transparent_25"
                android:gravity="center"
                android:minWidth="@dimen/dp_48"
                android:orientation="vertical">

                <com.example.untitleddiscordbot.Utils.AlwaysMarqueeTextView
                    android:id="@+id/members_value"
                    style="@style/myFontStyle.Regular"
                    android:layout_width="wrap_content"
                    android:scrollHorizontally="true"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxEms="5"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingEnd="@dimen/dp_4"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    tools:text="46ddddddddddddddd" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>