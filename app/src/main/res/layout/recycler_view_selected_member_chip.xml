<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/member_chip"
    android:background="@drawable/chip_background"
    android:backgroundTint="@color/active_color"
    android:orientation="vertical"
    android:layout_margin="@dimen/dp_2"

    android:paddingEnd="@dimen/dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:elevation="0dp"
            android:paddingEnd="8dp"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profile"
                android:id="@+id/member_chip_image"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_stroke"
            android:textAllCaps="false"
            android:textSize="@dimen/text_very_tiny"
            android:textStyle="italic"
            android:paddingStart="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_4"
            android:layout_gravity="center_vertical"
            tools:text="Nikus"
            android:id="@+id/member_chip_name"/>

        <ImageView
            android:layout_width="12dp"

            android:layout_height="fill_parent"
            app:tint="@color/white_stroke"
            android:layout_gravity="center"
            android:src="@drawable/ic_error"/>
    </LinearLayout>

</LinearLayout>